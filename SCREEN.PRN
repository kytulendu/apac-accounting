       PRINT-SCREEN    SECTION.
       PRINT-TEST.
      *
      *   ****	  C H E C K   I F   P R I N T E R   O R   S C R E E N
      *
	   IF WS-PRINT = "S"
	       GO TO SCREEN-PRINT.
	   IF WS-PRINT = "0"
	       PERFORM PRINT-ZERO
	   ELSE
	   IF WS-PRINT = "1"
	       PERFORM PRINT-SINGLE
	   ELSE
	   IF WS-PRINT = "2"
	       PERFORM PRINT-DOUBLE
	   ELSE
	       PERFORM PRINT-ADVANCE.
	     MOVE SPACES	 TO R-SL1.
	     GO TO PRINT-SCREEN-EXIT.

       PRINT-ZERO.
028700	     WRITE R-SL1 BEFORE 0 LINES.

       PRINT-SINGLE.
028700	     WRITE R-SL1 BEFORE 1 LINES.

       PRINT-DOUBLE.
028700	     WRITE R-SL1 BEFORE 2 LINES.

       PRINT-ADVANCE.
028690	   IF LINAGE-COUNTER < WS-PRN-LENGTH
028700	       WRITE R-SL1 BEFORE WS-ADVANCE LINES
	       MOVE "N" 	 TO WS-NEW-PAGE
	   ELSE
028720	       WRITE R-SL1 BEFORE PAGE
	       MOVE "Y" 	 TO WS-NEW-PAGE.

       SCREEN-PRINT.
	   IF WS-SCREEN = 1
	       DISPLAY R-SLA
	   ELSE
	       DISPLAY R-SLB.
